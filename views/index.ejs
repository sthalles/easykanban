<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/board.css' />
  <link rel='stylesheet' href='/stylesheets/animations/board-cols-anim.css' />
  <link rel='stylesheet' href='/javascripts/bower_components/angular-material/angular-material.css' />

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body ng-app="easykanban" layout="column">
  <md-toolbar>
    <h2> EasyKanban </h2>
  </md-toolbar>

  <div class="container" layout="row" flex>

    <md-sidenav md-is-locked-open="false" class="lightblue">
      Sidebar
    </md-sidenav>

    <div flex ng-view class="lightgreen"> </div>

    <script src="/javascripts/bower_components/angular/angular.js"></script>
    <script src="/javascripts/bower_components/angular-route/angular-route.js"></script>
    <script src="/javascripts/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/javascripts/bower_components/angular-aria/angular-aria.js"></script>
    <script src="/javascripts/bower_components/angular-messages/angular-messages.js"></script>
    <script src="/javascripts/bower_components/angular-material/angular-material.js"></script>

    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/routes.js"></script>

    <script src="/javascripts/services/task.js"></script>
    <script src="/javascripts/services/board.js"></script>

    <script src="/javascripts/directivies/dragdrop.js"></script>

    <script src="/javascripts/controllers/board.js"></script>
    <script src="/javascripts/controllers/login.js"></script>


</body>

</html>